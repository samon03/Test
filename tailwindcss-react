npx create-react-app my-project
cd my-project
npm install -D tailwindcss@3
npx tailwindcss init
npm install -D tailwindcss postcss autoprefixer

tailwind.config.js
/** @type {import('tailwindcss').Config} */
module.exports = {
  content: [
    "./src/**/*.{js,jsx,ts,tsx}",
  ],
  theme: {
    extend: {},
  },
  plugins: [],
}

index.css
@tailwind base;
@tailwind components;
@tailwind utilities;

error then restart the vcode

npm run start
